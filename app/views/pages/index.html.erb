<div ng-app="app">

  <div ng-controller="todoCtrl">

    <input ng-model="newTask" placeholder="Thing to do">
    <button ng-click="addTask(newTask)">Add</button><br><br>

    <span class="headertext">Tasks</span><br>
    
    <ol>
      <div ng-repeat="task in tasks track by $index">
        <li ng-click="completeTask(task)" ng-class="{strikethrough: task.complete}">{{ task.text }} <span class="smalltext" ng-click="deleteTask($index)">remove</span></li><br>
      </div>
    </ol>

    {{ countTasks() }} <br><br>

    <button ng-click="clearCompleted()">Clear Completed</button>
    <button ng-click="clearAll()">Clear All</button>

  </div>

</div>